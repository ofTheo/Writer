
<tagger>

	<!-- path: all filenames are relative to this -->
	<path>man_good/</path>

	<!-- mesh file -->
	<mesh>man_goodMan.xmf</mesh>
	<!-- skeleton file -->
	<skeleton>man_good.xsf</skeleton>

	<!-- animations -->
	<animations>
		<walk>man_goodWalk_baked.xaf</walk>
		<idle>man_goodIdle_baked.xaf</idle>
		<sidestep_l>man_goodSidestep_baked_l.xaf</sidestep_l>
		<sidestep_r>man_goodSidestep_baked_r.xaf</sidestep_r>
		<walk_to_turn>man_goodWalk_to_turn_baked.xaf</walk_to_turn>
		<turn_to_walk>man_goodTurn_to_walk_baked.xaf</turn_to_walk>
	</animations>
	
	<!-- important bones used in ik simulation -->
	<bones>
		<!-- root bone of the skeleton -->
		<root>Root</root>
		<!-- head bone -->
		<head>Head</head>
		<!-- end of the tag arm -->
		<tag_arm>Hand.r</tag_arm>
		<!-- end of the other (non-tagging) arm -->
		<other_arm>Hand.l</other_arm>
		<!-- the base bone where the arms attach to the torso -->
		<arm_torso_attach>Spine.1</arm_torso_attach>
	</bones>
		

</tagger>

